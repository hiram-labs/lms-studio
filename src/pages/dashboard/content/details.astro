---
import ErrorCapture from '../../../components/ErrorCapture.astro';
import DashboardLayout from '../../../layouts/DashboardLayout.astro';

import C from "../../../libs/config"
import { directusClientAuth } from "../../../libs/directus";
import { getQueryParam } from "../../../libs/utils"

import { readItems } from "@directus/sdk";
import { logger } from '@it-astro:logger';

let errors: any = []
let contentResponse: any = null

const contentID = getQueryParam(Astro.url, C.URL_QUERY_PARAM_ID)

try {
    contentResponse = await directusClientAuth.request(readItems('lms_content', {filter: {id: contentID}}))
} catch (error) {
    errors = (error as any)?.errors || [{message: error}]
    errors.forEach((error: any) => {logger.error(error.message)});
}
---

<DashboardLayout title="content details">
    <ErrorCapture errors={errors}>
        {contentResponse}
    </ErrorCapture>
</DashboardLayout>