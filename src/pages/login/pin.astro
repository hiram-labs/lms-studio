---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { directus_client_auth } from "../../libs/directus";

import { readItems } from "@directus/sdk";


const currentYear = new Date().getFullYear();

if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();
  const response = await directus_client_auth.request(readItems('lms_user_pin', {
    filter: {pin: String(data.get("pin"))},
    fields: ["token"]
  }))

  if(response.length && response[0]?.token) {
    return Astro.rewrite(new Request(new URL("/landing/content", Astro.url), {
      headers: {"x-static-token": response[0].token}
    }))
  }
}
