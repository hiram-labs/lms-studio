<div id="dashboard-module-subscription-table" />

<script>
    import {TabulatorFull as Tabulator, type CellComponent} from "tabulator-tables";
    import {showAlert} from "../libs/utils"

    let table: Tabulator;

    const handleUnsubscribe = async (_e: UIEvent, cell: CellComponent) => {
        try {
            const data = cell.getData()
            const response = await fetch("/api/misc-util", {
                method: "POST",
                headers: {"Content-Type": "application/json",},
                body: JSON.stringify(({function:"unsubscribe-modules", data: {assignmentId: data.lms_organization_content_assignment_id}} as TMiscUtilReqPayload)),
            });

            if (response.ok) {
                showAlert("success", `Successfully unsubscribed from module.<br/><span class="italic font-semibold">&nbsp;&nbsp;${data.content_title}</span>`);
                table.deleteRow(data.id);
            } else {
                showAlert("error", `Failed to unsubscribe from module.<br/><span class="italic font-semibold">&nbsp;&nbsp;${data.content_title}</span>`);
            }
        } catch (error) {
            showAlert("error", `An error occurred while unsubscribing: <br/> ${(error as any)?.message || error}`);
        }
    }

    const tableId = "#dashboard-module-subscription-table"
    table = new Tabulator(tableId, {
        layout: "fitColumns",
        layoutColumnsOnNewData:true,
        responsiveLayout:true,
        maxHeight: 650,
        pagination: true,
        paginationSize: 10,
        paginationSizeSelector: true,
        paginationCounter: "rows",
        paginationMode: "remote",
        sortMode:"remote",
        filterMode: "remote",
        index: "id",
        ajaxLoader: true,
        ajaxConfig: "POST",
        ajaxContentType: "json",
        ajaxFiltering: true,
        ajaxSorting: true,
        ajaxParams: { id: tableId},
        ajaxURL: "/api/table-data/",
        columns: [
            {title:"Name", field:"content_title", width:"30%"},
            {title:"Description", field:"content_description"},
            {title:"", field:"", width:60, hozAlign:"center", frozen: true, headerSort:false, tooltip:"Unsubscribe", cellClick:handleUnsubscribe, formatter:() => `<span class="inline-block"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5"><path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" /></svg></span>`},
        ],
    });

</script>