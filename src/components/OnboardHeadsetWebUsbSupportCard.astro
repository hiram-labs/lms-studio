---
import OnboardHeadsetErrorAlert from "./OnboardHeadsetErrorAlert.astro"

const {stepId} = Astro.props

---

<div class="hidden" data-step-cards data-step-card-id={stepId}>
    <OnboardHeadsetErrorAlert>
        <!-- omit restart cta -->
        <span />
    </OnboardHeadsetErrorAlert>
    <div class="flex flex-col lg:flex-row flex-grow">
        <div class="w-full lg:w-4/6 lg:self-end">
            <div class="text-start" data-step-error-group>
                <span class="loading loading-dots size-48 text-base-300"></span>
            </div>
            <div class="prose">
                <h1>Checking Browser for WebUSB Support</h1>
                <p>
                    WebUSB is needed to install the APK directly onto your device. Ensure your browser supports WebUSB. We recommend using the latest version of Chrome or Edge for compatibility.
                </p>
            </div>
        </div>
        <div class="w-full lg:w-2/6 self-center flex justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 2100 2100" fill="currentColor" class="size-80">
