---
import OnboardHeadsetErrorAlert from "./OnboardHeadsetErrorAlert.astro"

const {stepId} = Astro.props

---

<div class="hidden" data-step-cards data-step-card-id={stepId}>
    <OnboardHeadsetErrorAlert />
    <div class="flex flex-col lg:flex-row flex-grow">
        <div class="w-full lg:w-4/6 lg:self-end">
            <div class="text-start mb-8" data-step-error-group>
                <div class="radial-progress font-black text-base-300" style="--value:0;--size:6.5rem;--thickness:0.75rem;" role="progressbar">0%</div>
            </div>
            <div class="prose">
                <h1>Downloading Pipe Application APK</h1>
                <p>
                    The APK for our Pipe application is required to onboard your headset. The download will begin automatically.
                </p>
            </div>
        </div>
        <div class="w-full lg:w-2/6 self-center flex justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.05" stroke="currentColor" class="size-32">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 7.5h-.75A2.25 2.25 0 0 0 4.5 9.75v7.5a2.25 2.25 0 0 0 2.25 2.25h7.5a2.25 2.25 0 0 0 2.25-2.25v-7.5a2.25 2.25 0 0 0-2.25-2.25h-.75m-6 3.75 3 3m0 0 3-3m-3 3V1.5m6 9h.75a2.25 2.25 0 0 1 2.25 2.25v7.5a2.25 2.25 0 0 1-2.25 2.25h-7.5a2.25 2.25 0 0 1-2.25-2.25v-.75" />
              </svg>
        </div>
    </div>
</div>