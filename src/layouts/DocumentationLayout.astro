---
import CopyrightFooter from "../components/CopyrightFooter.astro";
import BaseLayout from "./BaseLayout.astro";

const { title } = Astro.props;
const { pathname } = Astro.url

---

<BaseLayout title={title} description="" ogImage="">
    <div class="min-h-screen">
        <div class="sticky top-0 bg-base-200 z-50 border-b h-12">
            <div class="h-full flex items-center">
                <div class="">
                    <img src="/images/logo-black-300w.png" alt="logo" class="h-10 w-auto" />
                </div>
            </div>
        </div>
        
        <div class="flex">
            <nav class="w-64" aria-label="Main Navigation">
                <div class="py-4 sticky top-12">
                    <div>
                        <ul class="menu p-2">
                            <li class="menu-item mb-2">
                                <a href="/documentation/onboarding" class=`${pathname === "/documentation/onboarding" && "active"} nav-link` aria-haspopup="true" aria-controls="onboarding-dropdown" aria-expanded={pathname === "/documentation/onboarding" ? true : undefined}>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                                        <path fill-rule="evenodd" d="M1 6a3 3 0 0 1 3-3h12a3 3 0 0 1 3 3v8a3 3 0 0 1-3 3H4a3 3 0 0 1-3-3V6Zm4 1.5a2 2 0 1 1 4 0 2 2 0 0 1-4 0Zm2 3a4 4 0 0 0-3.665 2.395.75.75 0 0 0 .416 1A8.98 8.98 0 0 0 7 14.5a8.98 8.98 0 0 0 3.249-.604.75.75 0 0 0 .416-1.001A4.001 4.001 0 0 0 7 10.5Zm5-3.75a.75.75 0 0 1 .75-.75h2.5a.75.75 0 0 1 0 1.5h-2.5a.75.75 0 0 1-.75-.75Zm0 6.5a.75.75 0 0 1 .75-.75h2.5a.75.75 0 0 1 0 1.5h-2.5a.75.75 0 0 1-.75-.75Zm.75-4a.75.75 0 0 0 0 1.5h2.5a.75.75 0 0 0 0-1.5h-2.5Z" clip-rule="evenodd" />
                                    </svg>
                                    <span class="font-bold">Onboarding</span>
                                </a>
                                <ul id="onboarding-dropdown" class=`${pathname !== "/documentation/onboarding" && "hidden"} submenu pl-4`>
                                    <a href="#organization-onboarding" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Organization onboarding</a>
                                    <a href="#headset-onboarding" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Headset onboarding</a>
                                    <a href="#trainee-onboarding" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Trainee onboarding</a>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <CopyrightFooter />
                </div>
            </nav>
        
            <main role="main">
                <div class="p-4">
                    <slot />
                </div>
            </main>
        </div>
    </div>
</BaseLayout>
