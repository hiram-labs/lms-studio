---
import BaseLayout from "./BaseLayout.astro";
import DashboardBreadcrumb from "../components/DashboardBreadcrumb.astro";
import DashboardMenu from "../components/DashboardMenu.astro";

const { title } = Astro.props;
const pathname = Astro.url.pathname

---

<BaseLayout title={title} description="" ogImage="">
<div class="flex h-screen">

    <nav class="w-64 bg-base-200 overflow-y-auto" aria-label="Main Navigation">
        <div class="sticky top-0 bg-base-300 px-6 py-4 z-50">
            <img src="/images/logo-black-300w.png" alt="logo" class="h-12 w-auto" />
        </div>

        <div class="py-4">
            <ul class="menu p-2">
                <li class="menu-item mb-2">
                    <a href="/dashboard/profile" class=`${pathname === "/dashboard/profile" && "active"} nav-link` aria-haspopup="true" aria-controls="profile-dropdown" aria-expanded={pathname === "/dashboard/profile" ? true : undefined}>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd" d="M1 6a3 3 0 0 1 3-3h12a3 3 0 0 1 3 3v8a3 3 0 0 1-3 3H4a3 3 0 0 1-3-3V6Zm4 1.5a2 2 0 1 1 4 0 2 2 0 0 1-4 0Zm2 3a4 4 0 0 0-3.665 2.395.75.75 0 0 0 .416 1A8.98 8.98 0 0 0 7 14.5a8.98 8.98 0 0 0 3.249-.604.75.75 0 0 0 .416-1.001A4.001 4.001 0 0 0 7 10.5Zm5-3.75a.75.75 0 0 1 .75-.75h2.5a.75.75 0 0 1 0 1.5h-2.5a.75.75 0 0 1-.75-.75Zm0 6.5a.75.75 0 0 1 .75-.75h2.5a.75.75 0 0 1 0 1.5h-2.5a.75.75 0 0 1-.75-.75Zm.75-4a.75.75 0 0 0 0 1.5h2.5a.75.75 0 0 0 0-1.5h-2.5Z" clip-rule="evenodd" />
                        </svg>
                        <span class="ml-3">
                            Profile
                        </span>
                    </a>
                    <ul id="profile-dropdown" class=`${pathname !== "/dashboard/profile" && "hidden"} submenu pl-4`>
                        <!-- <a href="#section1" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Submenu 1</a> -->
                    </ul>
                </li>
                <li class="menu-item mb-2">
                    <a href="/dashboard/users" class=`${pathname === "/dashboard/users" && "active"} nav-link` aria-haspopup="true" aria-controls="users-dropdown" aria-expanded={pathname === "/dashboard/users" ? true : undefined}>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path d="M7 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM14.5 9a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5ZM1.615 16.428a1.224 1.224 0 0 1-.569-1.175 6.002 6.002 0 0 1 11.908 0c.058.467-.172.92-.57 1.174A9.953 9.953 0 0 1 7 18a9.953 9.953 0 0 1-5.385-1.572ZM14.5 16h-.106c.07-.297.088-.611.048-.933a7.47 7.47 0 0 0-1.588-3.755 4.502 4.502 0 0 1 5.874 2.636.818.818 0 0 1-.36.98A7.465 7.465 0 0 1 14.5 16Z" />
                        </svg>
                        <span class="ml-3">
                            Users
                        </span>
                    </a>
                    <ul id="users-dropdown" class=`${pathname !== "/dashboard/users" && "hidden"} submenu pl-4`>
                        <!-- <a href="#section1" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Submenu 1</a> -->
                    </ul>
                </li>
                <li class="menu-item mb-2">
                    <a href="/dashboard/groups" class=`${pathname === "/dashboard/groups" && "active"} nav-link` aria-haspopup="true" aria-controls="groups-dropdown" aria-expanded={pathname === "/dashboard/groups" ? true : undefined}>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path d="M10 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM6 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0ZM1.49 15.326a.78.78 0 0 1-.358-.442 3 3 0 0 1 4.308-3.516 6.484 6.484 0 0 0-1.905 3.959c-.023.222-.014.442.025.654a4.97 4.97 0 0 1-2.07-.655ZM16.44 15.98a4.97 4.97 0 0 0 2.07-.654.78.78 0 0 0 .357-.442 3 3 0 0 0-4.308-3.517 6.484 6.484 0 0 1 1.907 3.96 2.32 2.32 0 0 1-.026.654ZM18 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0ZM5.304 16.19a.844.844 0 0 1-.277-.71 5 5 0 0 1 9.947 0 .843.843 0 0 1-.277.71A6.975 6.975 0 0 1 10 18a6.974 6.974 0 0 1-4.696-1.81Z" />
                        </svg>
                        <span class="ml-3">
                            Groups
                        </span>
                    </a>
                    <ul id="groups-dropdown" class=`${pathname !== "/dashboard/groups" && "hidden"} submenu pl-4`>
                        <!-- <a href="#section1" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Submenu 1</a> -->
                    </ul>
                </li>
                <li class="menu-item mb-2">
                    <a href="/dashboard/content" class=`${pathname === "/dashboard/content" && "active"} nav-link` aria-haspopup="true" aria-controls="content-dropdown" aria-expanded={pathname === "/dashboard/content" ? true : undefined}>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd" d="M2.5 3A1.5 1.5 0 0 0 1 4.5v4A1.5 1.5 0 0 0 2.5 10h6A1.5 1.5 0 0 0 10 8.5v-4A1.5 1.5 0 0 0 8.5 3h-6Zm11 2A1.5 1.5 0 0 0 12 6.5v7a1.5 1.5 0 0 0 1.5 1.5h4a1.5 1.5 0 0 0 1.5-1.5v-7A1.5 1.5 0 0 0 17.5 5h-4Zm-10 7A1.5 1.5 0 0 0 2 13.5v2A1.5 1.5 0 0 0 3.5 17h6a1.5 1.5 0 0 0 1.5-1.5v-2A1.5 1.5 0 0 0 9.5 12h-6Z" clip-rule="evenodd" />
                        </svg>
                        <span class="ml-3">
                            Content
                        </span>
                    </a>
                    <ul id="content-dropdown" class=`${pathname !== "/dashboard/content" && "hidden"} submenu pl-4`>
                        <!-- <a href="#section1" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Submenu 1</a> -->
                    </ul>
                </li>
                <li class="menu-item mb-2">
                    <a href="/dashboard/bundles" class=`${pathname === "/dashboard/bundles" && "active"} nav-link` aria-haspopup="true" aria-controls="bundles-dropdown" aria-expanded={pathname === "/dashboard/bundles" ? true : undefined}>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path d="m3.196 12.87-.825.483a.75.75 0 0 0 0 1.294l7.25 4.25a.75.75 0 0 0 .758 0l7.25-4.25a.75.75 0 0 0 0-1.294l-.825-.484-5.666 3.322a2.25 2.25 0 0 1-2.276 0L3.196 12.87Z" />
                            <path d="m3.196 8.87-.825.483a.75.75 0 0 0 0 1.294l7.25 4.25a.75.75 0 0 0 .758 0l7.25-4.25a.75.75 0 0 0 0-1.294l-.825-.484-5.666 3.322a2.25 2.25 0 0 1-2.276 0L3.196 8.87Z" />
                            <path d="M10.38 1.103a.75.75 0 0 0-.76 0l-7.25 4.25a.75.75 0 0 0 0 1.294l7.25 4.25a.75.75 0 0 0 .76 0l7.25-4.25a.75.75 0 0 0 0-1.294l-7.25-4.25Z" />
                        </svg>
                        <span class="ml-3">
                            Bundles
                        </span>
                    </a>
                    <ul id="bundles-dropdown" class=`${pathname !== "/dashboard/bundles" && "hidden"} submenu pl-4`>
                        <!-- <a href="#section1" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Submenu 1</a> -->
                    </ul>
                </li>
                <li class="menu-item mb-2">
                    <a href="/dashboard/subscriptions" class=`${pathname === "/dashboard/subscriptions" && "active"} nav-link` aria-haspopup="true" aria-controls="subscriptions-dropdown" aria-expanded={pathname === "/dashboard/subscriptions" ? true : undefined}>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd" d="M15.75 3A2.25 2.25 0 0 1 18 5.25v1.214c0 .423-.277.788-.633 1.019A2.997 2.997 0 0 0 16 10c0 1.055.544 1.982 1.367 2.517.356.231.633.596.633 1.02v1.213A2.25 2.25 0 0 1 15.75 17H4.25A2.25 2.25 0 0 1 2 14.75v-1.213c0-.424.277-.789.633-1.02A2.998 2.998 0 0 0 4 10a2.997 2.997 0 0 0-1.367-2.517C2.277 7.252 2 6.887 2 6.463V5.25A2.25 2.25 0 0 1 4.25 3h11.5ZM13.5 7.396a.75.75 0 0 0-1.5 0v1.042a.75.75 0 0 0 1.5 0V7.396Zm0 4.167a.75.75 0 0 0-1.5 0v1.041a.75.75 0 0 0 1.5 0v-1.041Z" clip-rule="evenodd" />
                        </svg>
                        <span class="ml-3">
                            Subscription
                        </span>
                    </a>
                    <ul id="subscriptions-dropdown" class=`${pathname !== "/dashboard/subscriptions" && "hidden"} submenu pl-4`>
                        <!-- <a href="#section1" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Submenu 1</a> -->
                    </ul>
                </li>
                <li class="menu-item mb-2">
                    <a href="/dashboard/audit-logs" class=`${pathname === "/dashboard/audit-logs" && "active"} nav-link` aria-haspopup="true" aria-controls="audit-logs-dropdown" aria-expanded={pathname === "/dashboard/audit-logs" ? true : undefined}>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd" d="M4.5 2A1.5 1.5 0 0 0 3 3.5v13A1.5 1.5 0 0 0 4.5 18h11a1.5 1.5 0 0 0 1.5-1.5V7.621a1.5 1.5 0 0 0-.44-1.06l-4.12-4.122A1.5 1.5 0 0 0 11.378 2H4.5Zm2.25 8.5a.75.75 0 0 0 0 1.5h6.5a.75.75 0 0 0 0-1.5h-6.5Zm0 3a.75.75 0 0 0 0 1.5h6.5a.75.75 0 0 0 0-1.5h-6.5Z" clip-rule="evenodd" />
                        </svg>
                        <span class="ml-3">
                            Audit Logs
                        </span>
                    </a>
                    <ul id="audit-logs-dropdown" class=`${pathname !== "/dashboard/audit-logs" && "hidden"} submenu pl-4`>
                        <!-- <a href="#section1" class="block px-3 py-1 my-2 rounded hover:bg-gray-300">Submenu 1</a> -->
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <main class="flex-1 overflow-y-auto" role="main">
        <div class="sticky top-0 px-6 pt-2 pb-1 bg-base-300 z-50">
            <div class="flex justify-between items-center w-full">
                <DashboardBreadcrumb />
                <DashboardMenu />
            </div>
        </div>

        <div class="p-4">
            <slot />
        </div>

    </main>

</div>
</BaseLayout>
